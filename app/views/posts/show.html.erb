<div id="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>
	<h2>
		<%= @post.user.email %>
	</h2>
	<p class="date">
		Submitted <%= time_ago_in_words(@post.created_at) %> ago
	</p>

	<p class="body">
		<%= @post.body %>
	</p>

	<p class="image">
	<%= image_tag @post.image.url(:medium) %>
	</p>
</div>