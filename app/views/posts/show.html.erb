<div id="post_content">
	<div style="margin-top: 3%;margin-bottom: 3%;">
	<% if user_signed_in? && @post.user_id== current_user.id %>
		<%= link_to "Update", edit_post_path(@post), class: "button" %>
		<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete? "}, class: "button" %>
	<% end %>
	</div>
	<h1 class="title" >
		<%= @post.title %>
	</h1>
	<h2 style="margin-left:12%">
		By <%= @post.user.name %>
	</h2>
	<p class="date" style="margin-left:12%">
		Submitted <%= time_ago_in_words(@post.created_at) %> ago
	</p>

	<p class="body">
		<%= @post.body %>
	</p>

	<p class="image">
	<% if !@post.image_file_name.blank? %>
		<%= image_tag @post.image.url(:medium) %>
	<% end %>
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>
		<%= render "comments/form" %>
	</div>
</div>