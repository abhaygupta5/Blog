<div id="page_wrapper">
	<h1>Make Something</h1>

	<%= form_for :post, url: posts_path do |f| %>
		<% if @post.errors.any? %>
			<div id="errors">
				<h2><%= pluralize(@post.errors.count, "error") %> stopped this post from saving</h2> 
				<ul>
					<% @post.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>

					<% end %>

				</ul>

			</div>

		<% end %>
		<p>
			<%= f.label :category %><br>
			<%= f.select :category, [ ['Science and Technology','tech'], ['Programming','prog'], ['Culture','culture'],['Education','edu'],['Personality Development','pd'],['Sports'],['Entertainment'],['Product'],['Politics'], 'Other' ], :prompt => 'Select One Category of your post', :class => 'genForm_dropBox' %>
		</p>
		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</p>

		<p>
			<%= f.label :image %><br>
			<%= f.file_field :image %>
		</p>

		<p>
			<%= f.submit %>
		</p>
	<% end %>
</div>