<div id="page_wrapper">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <table style="width:100%;">
  <tr>
  <td style="width:25%;"><%= f.label :name, class: "labelclass" %></td>
  <td><%= f.text_field :name, required: true, autofocus: true %></td></tr>
  <tr>
  <td><%= f.label :email, class: "labelclass" %></td>
  <td><%= f.email_field :email, required: true %></td></tr>
  <tr>
  <td><%= f.label :password, class: "labelclass" %></td>

  <td><%= f.password_field :password, required: true,  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %></td></tr>
  <tr colspan="2"><td></td><td><p>6 characters minimum</p></td></tr>
  <tr>
  <td><%= f.label :password_confirmation, class: "labelclass" %></td>
  <td><%= f.password_field :password_confirmation, required: true %></td>
  </tr>
  </table>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "button" %>
  </div>
<% end %>
<br><br>
<%= render "devise/shared/links" %>
</div>