<header class="masthead" style="background: url(<%= image_path('home.png') %>)">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Your Board</h1>
              <span class="subheading">Where you can learn a lot</span>
            </div>
          </div>
        </div>
      </div>
    </header>
<div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
<div class="wrapper_with_padding">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
  <table style="width:100%">
    <tr>
    <td><%= f.label :email, class: "labelclass" %></td>
    <td><%= f.email_field :email, required: false, autofocus: true %></td></tr>
    <tr>
    <td><%= f.label :password, class: "labelclass" %></td>
    <td><%= f.password_field :password, required: false %></td>
    </tr>
    </table>
    <br>
    <%= f.label :remember_me , class: "remember" %>
    <%= f.check_box :remember_me,class: "remember1", as: :boolean if devise_mapping.rememberable? %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
<br><br>
<%= render "devise/shared/links" %>
</div>