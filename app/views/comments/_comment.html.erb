<div class="comment clearfix" >
	<table>
		<tr>
			<td style="min-width: 90%;">
	<div class="comment_content">
		
		<p class="comment_name"><strong><em><%= comment.user.name %></em></strong></p>
		<p class="comment_body"><%= comment.body %></p>
		<p style="font-size: 12px;"><%= time_ago_in_words(comment.created_at) %> ago</p>
	</div>
	</td>
	<td>
	<div>
	<% if user_signed_in? && (comment.user.id== current_user.id || comment.post.user.id==current_user.id) %>
		<p align="right"><%= link_to image_tag("icon.png"), [comment.post, comment], method: :delete, data: { confirm: "Are you sure?"} %></p>
	<% end %>
	</div>
	</td>
</tr>
</table>
</div>

