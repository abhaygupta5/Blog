<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_name"><strong><em><%= comment.user.name %></em></strong></p>
		<p class="comment_body"><%= comment.body %></p>
		<p class="comment_title"><%= time_ago_in_words(comment.created_at) %> ago</p>
	</div>
	<% if user_signed_in? && (comment.user.id== current_user.id || comment.post.user.id==current_user.id) %>
		<p><%= link_to "Delete Comment", [comment.post, comment], method: :delete, class: "button", data: { confirm: "Are you sure?"} %></p>
	<% end %>

</div>