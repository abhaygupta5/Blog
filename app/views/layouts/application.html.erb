<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="sidebar">
      <ul>
        <li class="category"><%= link_to "Blog", root_path %></li>
        <li><%= link_to "Posts", root_path %></li>
        <li><%= link_to "About", about_path %></li>
      </ul>

      
    </div>

    <div id="main_content">
      <div id="header">
      <% if current_page?(root_path) %>
        <p>Post Feed </p>
      <% elsif current_page?(about_path) %>
        <p>About</p>
      <% else %>
        <p>You are reading a post</p>
      <% end %>
        <div class="buttons">
          <% if user_signed_in? %>
            <p class="button"> <%= link_to "Make Post", new_post_path %></p>
            <p class="button"> <%= link_to "Edit Account", edit_user_registration_path %></p>
            <p class="button"><%= link_to "Log Out",destroy_user_session_path, method: :delete %> </p>
          <% else %>
            <p class="button"><%= link_to "Login", new_user_session_path %> </p>
            <p class="button"><%= link_to "Sign Up", new_user_registration_path %> </p>
          <% end %>
        </div>
      </div>

      <!-- for displaying errors and messages
      <% flash.each do |name,msg| %>
        <%= content_tag(:div,msg,class: "alert") %>
      <% end %>
      -->
      <%= yield %>
    </div>

    
  </body>
</html>
